<font color="white" size="7"><%=@croom.name%></font>

<div id="request_talk_update">
<%= form_tag(talk_update_path, method: :post, remote: true) { %>
<font color="white" size="3">　送信者 </font>
    <%= text_field :data, :name %>
    <font color="white" size="3">  内容 </font>
    <%= text_field :data, :content, style: "font-size:14pt;" %>
    <%= submit_tag :送信 %>
<% } %>
</div>

<hr>
<div id="updated_by_ajax"  style="overflow:scroll;height:600px;">
<% @talks.each do |talk| %>
<div class="balloon6">
 <div class="chatting">
 <font color="#E0FFFF"> <%= talk.name %> </font><br>
  <div class="says"><%= talk.content%>&nbsp
    <font color="#666699"> <%= talk.created_at.in_time_zone('Tokyo').strftime('%m月%d日 %H:%M')%><br></font>
  </div>
 </div>

 <div class="balloon6">
  <div class="rightchatting">
 <font color="#E0FFFF"> <%= talk.name %> </font><br>
   <div class="rsays"><%= talk.content%>&nbsp
    <font color="#666699"> <%= talk.created_at.in_time_zone('Tokyo').strftime('%m月%d日 %H:%M')%><br></font>
  </p>
   </div>
  </div>
 </div>
</div> 
<%end%>

</div> 
<hr>