<p id="notice"><%= notice %></p>

<font color="white" size="6">インフォメーション</font>
<div style="width: 100%; height:620px; overflow:auto;">   
 <table style= "border-spacing: 0;"  width="60%">
 <br>
  <thead>
    <tr>
      <th style="border-top:none; border-left:none; border-bottom:none;"></th>
      <th style="border: 1px solid white"><font color="white">タイトル</font></th>
      <th style="border: 1px solid white"><font color="white">締め切り</font></th>
      <th style="border: 1px solid white"><font color="white">締め切りまでの残りの日にち</font></th>
      
    </tr>
  </thead>
  
  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td style="border-top:none; border-left:none; border-bottom:none;" width="11%">  
          <% if Isnew(info.created_at, 4) %>
            <img src="<%= asset_path 'info/new.png'%>"width="100%">
          <% end %>
        </td> 
                  
        <td style="border: 1px solid white" width="25%"><font size"2"><%= link_to info.title, info, :style=>"color:white;" %></td>
        <td style="border: 1px solid white" width="25%"><center><font color="white" size="2"><%= info.limit.strftime("%Y年%m月%d日") %></font></center></td>
        <td style="border: 1px solid white">
          <% if IsLimitNear(info.limit, 6) %>
            <font color="red">
          <% end %>
          <%= GetRemainDays(info.limit) %>
          <% if IsLimitNear(info.limit, 6) %>
            </font>
          <% end %>
        </td>        
      </tr>
    <% end %>
  </tbody>
 </table>
</div>
<br>
